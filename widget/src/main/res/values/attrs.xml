<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AppCustomView">
        <!--TEXT-->
        <attr name="android:title" format="string" />
        <attr name="android:text" format="string" />
        <attr name="android:textSize" format="reference" />
        <attr name="android:hint" format="string" />
        <attr name="android:clickable" format="boolean" />
        <!--INPUT TYPE-->
        <attr name="android:textAllCaps" format="boolean" />
        <attr name="android:maxLength" format="integer" />
        <attr name="android:inputType" format="reference" />
        <attr name="android:imeOptions" format="reference" />
        <attr name="android:maxLines" format="integer" />
        <attr name="android:textStyle" format="integer" />
        <attr name="android:nextFocusForward" format="integer" />
        <!--COLOR-->
        <attr name="android:textColor" format="reference" />
        <attr name="android:textColorHint" format="reference" />
        <attr name="android:tint" format="integer" />
        <attr name="android:drawableTint" format="integer" />
        <attr name="android:backgroundTint" format="integer" />
        <!--DRAWABLE-->
        <attr name="android:src" format="reference" />
        <attr name="android:background" format="reference" />
        <attr name="android:drawableStart" format="reference" />
        <attr name="android:drawableEnd" format="reference" />
        <attr name="android:drawable" format="reference" />
        <!--CHECKABLE-->
        <attr name="android:checked" format="boolean" />
        <attr name="android:checkable" format="boolean" />
        <!--LAYOUT-->
        <attr name="android:gravity" format="reference" />
        <attr name="android:orientation" format="integer" />
        <attr name="android:radius" format="integer" />
        <!--PADDING-->
        <attr name="android:paddingStart" format="dimension" />
        <attr name="android:paddingEnd" format="dimension" />
        <attr name="android:paddingTop" format="dimension" />
        <attr name="android:paddingBottom" format="dimension" />
        <!--SELECTORS-->
        <attr name="android:enabled" format="boolean" />

        <!--EXPANDABLE-->
        <attr name="expandDuration" format="integer" />
        <attr name="expanded" format="boolean" />
        <attr name="expandOrientation" format="integer" />
        <attr name="expandParallax" format="float" />

        <!--APP CONSTRAINTS-->
        <attr name="radius" format="dimension" />
        <attr name="radiusTopLeft" format="dimension" />
        <attr name="radiusTopRight" format="dimension" />
        <attr name="radiusBottomLeft" format="dimension" />
        <attr name="radiusBottomRight" format="dimension" />
        <attr name="strokeLineColor" format="color" />
        <attr name="strokeLineWidth" format="dimension" />
        <attr name="dashLineWidth" format="dimension" />
        <attr name="dashLineGap" format="dimension" />
        <attr name="backgroundColor" format="color" />

        <!--Other-->
        <attr name="noneOptional" format="boolean" />

    </declare-styleable>

    <declare-styleable name="ShimmerLayout">
        <attr name="shimmer_clip_to_children" format="boolean" />
        <attr name="shimmer_colored" format="boolean" />
        <attr name="shimmer_base_color" format="color" />
        <attr name="shimmer_highlight_color" format="color" />
        <attr name="shimmer_base_alpha" format="float" />
        <attr name="shimmer_highlight_alpha" format="float" />
        <attr name="shimmer_auto_start" format="boolean" />
        <attr name="shimmer_duration" format="integer" />
        <attr name="shimmer_repeat_count" format="integer" />
        <attr name="shimmer_repeat_delay" format="integer" />
        <attr name="shimmer_repeat_mode" format="enum">
            <enum name="restart" value="1" />
            <enum name="reverse" value="2" />
        </attr>
        <attr name="shimmer_direction" format="enum">
            <enum name="left_to_right" value="0" />
            <enum name="top_to_bottom" value="1" />
            <enum name="right_to_left" value="2" />
            <enum name="bottom_to_top" value="3" />
        </attr>
        <attr name="shimmer_dropoff" format="float" />
        <attr name="shimmer_fixed_width" format="dimension" />
        <attr name="shimmer_fixed_height" format="dimension" />
        <attr name="shimmer_intensity" format="float" />
        <attr name="shimmer_width_ratio" format="float" />
        <attr name="shimmer_height_ratio" format="float" />
        <attr name="shimmer_shape" format="enum">
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
        </attr>
        <attr name="shimmer_tilt" format="float" />
    </declare-styleable>

</resources>