<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Fragment" />

    <style name="Dialog" />

    <style name="Dialog.Icon">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
    </style>


    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/round_button_blue</item>
    </style>


    <style name="Dialog.CenterLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:minHeight">260dp</item>
        <item name="android:paddingBottom">@dimen/contentMargin24</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:elevation">0dp</item>
        <item name="radius">@dimen/dialogRadius</item>
        <item name="android:layout_marginStart">@dimen/contentMargin24</item>
        <item name="android:layout_marginEnd">@dimen/contentMargin24</item>
    </style>

    <style name="Dialog.BottomLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:elevation">0dp</item>
        <item name="strokeLineWidth">1px</item>
        <item name="strokeLineColor">#E1E1E1</item>
        <item name="radiusTopRight">@dimen/dialogRadius</item>
        <item name="radiusTopLeft">@dimen/dialogRadius</item>
        <item name="backgroundColor">@color/color_white</item>
    </style>

    <style name="Dialog.Title" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/appBarSize</item>
        <item name="android:paddingStart">@dimen/contentMargin24</item>
        <item name="android:paddingEnd">@dimen/contentMargin24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize18</item>
    <!--<item name="autoSizePresetSizes">@dimen/textSize15</item>
        <item name="autoSizeTextType">uniform</item>-->
    </style>

    <style name="Dialog.TitleIcon">
        <item name="android:layout_width">@dimen/appBarSize</item>
        <item name="android:layout_height">@dimen/appBarSize</item>
        <item name="android:padding">16dp</item>
        <item name="android:tint">@color/colorTextDefault</item>
    </style>

    <style name="Dialog.CloseButton">
        <item name="android:layout_width">@dimen/appBarSize</item>
        <item name="android:layout_height">@dimen/appBarSize</item>
        <item name="android:padding">16dp</item>
        <item name="android:tint">@color/colorTextDefault</item>
        <item name="android:rotation">90</item>
        <item name="android:src">@drawable/ic_close</item>
    </style>

    <style name="Dialog.MessageTitle" parent="TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">@dimen/contentMargin24</item>
        <item name="android:layout_marginEnd">@dimen/contentMargin24</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize24</item>
    </style>

    <style name="Dialog.Message" parent="TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:layout_marginStart">@dimen/contentMargin24</item>
        <item name="android:layout_marginEnd">@dimen/contentMargin24</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widgets" />

    <style name="Widgets.Button" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/contentMargin24</item>
        <item name="android:paddingEnd">@dimen/contentMargin24</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="App.Logo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@mipmap/img_logo_text</item>
        <item name="android:scaleType">fitStart</item>
        <!--<item name="layout_constraintDimensionRatio">@string/logoRatio</item>-->
    </style>

    <style name="App.ProgressView">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:src">@drawable/ic_check</item>
        <item name="android:tint">#3C3C3C</item>
    </style>

    <style name="App.ScrollTipView">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">@dimen/contentMargin24</item>
        <item name="android:tint">@color/color_primary</item>
        <item name="android:src">@drawable/ic_double_arrow_down</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="App.StatusBarHolder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="expanded">true</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

</resources>